{
    "workbench.editor.defaultBinaryEditor": "default",
    "workbench.editor.autoLockGroups": {
        "default": true
    },
    "latex-workshop.latex.tools": [
        {
            "name": "pdflatex",
            "command": "pdflatex",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "-output-directory=build",
                "%DOC%"
            ]
        },
        {
            "name": "bibtex",
            "command": "bibtex",
            "args": [
                "%DOCFILE%"
            ]
        }
    ],
    "latex-workshop.latex.recipes": [
        {
            "name": "CTMM: pdflatex ➞ bibtex ➞ pdflatex × 2",
            "tools": [
                "pdflatex",
                "bibtex", 
                "pdflatex",
                "pdflatex"
            ]
        },
        {
            "name": "CTMM: pdflatex × 2 (Standard)",
            "tools": [
                "pdflatex",
                "pdflatex"
            ]
        }
    ],
    "latex-workshop.latex.rootFile.useSubFile": false,
    "latex-workshop.latex.rootFile.doNotPrompt": true,
    "latex-workshop.latex.search.rootFiles.include": ["main.tex"],
    "latex-workshop.view.pdf.viewer": "tab",
    "latex-workshop.view.pdf.internal.synctex.keybinding": "double-click",
    "latex-workshop.latex.clean.fileTypes": [
        "*.aux", "*.bbl", "*.blg", "*.idx", "*.ind", 
        "*.lof", "*.lot", "*.out", "*.toc", "*.acn", 
        "*.acr", "*.alg", "*.glg", "*.glo", "*.gls", 
        "*.fls", "*.log", "*.fdb_latexmk", "*.synctex.gz"
    ],
    "latex-workshop.latex.build.clearLog.everyRecipeStep.enabled": false,
    "latex-workshop.latex.latex.autoClean.run": "onBuilt",
    "files.associations": {
        "*.tex": "latex",
        "*.sty": "latex"
    },
    "editor.wordWrap": "on",
    "editor.rulers": [80],
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "files.encoding": "utf8",
    "github.copilot.enable": {
        "*": true,
        "latex": true
    },
    "github.copilot.editor.enableAutoCompletions": true
}