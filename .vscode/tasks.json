{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build LaTeX",
            "type": "shell",
            "command": "latexmk -pdf -pdflatex=\"pdflatex -synctex=1 -interaction=nonstopmode -file-line-error\" -outdir=build main.tex",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Clean Build",
            "type": "shell",
            "command": "latexmk -c -outdir=build"
        }
    ]
}
