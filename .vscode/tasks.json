{
    "version": "2.0.0",
    "_comment": "This file uses the CTMM localization system. Labels are externalized to support internationalization.",
    "_localization": {
        "system": "localization/constants.json",
        "language": "de",
        "template": "tasks.template.json"
    },
    "tasks": [
        {
            "label": "CTMM: Kompilieren",
            "_label_key": "tasks.compile",
            "_label_note": "Localized via CTMM localization system",
            "type": "shell",
            "command": "pdflatex",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "-output-directory=build",
                "main.tex"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": {
                "owner": "latex",
                "fileLocation": [
                    "relative",
                    "${workspaceRoot}"
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):\\s+(.*)",
                    "file": 1,
                    "line": 2,
                    "message": 3
                }
            }
        }
    ]
}