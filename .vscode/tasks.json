{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CTMM: Build Complete System",
            "type": "shell",
            "command": "pdflatex",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "-output-directory=build",
                "main.tex"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": {
                "owner": "latex",
                "fileLocation": ["relative", "${workspaceRoot}"],
                "pattern": {
                    "regexp": "^(.*):(\\d+):\\s+(.*)",
                    "file": 1,
                    "line": 2,
                    "message": 3
                }
            },
            "dependsOn": "CTMM: Create Missing Directories"
        },
        {
            "label": "CTMM: Build Single Module",
            "type": "shell",
            "command": "pdflatex",
            "args": [
                "-synctex=1", 
                "-interaction=nonstopmode",
                "-file-line-error",
                "-output-directory=build",
                "${file}"
            ],
            "group": "build",
            "presentation": {
                "panel": "new"
            },
            "problemMatcher": {
                "owner": "latex",
                "fileLocation": ["relative", "${workspaceRoot}"],
                "pattern": {
                    "regexp": "^(.*):(\\d+):\\s+(.*)",
                    "file": 1,
                    "line": 2,
                    "message": 3
                }
            },
            "dependsOn": "CTMM: Create Missing Directories"
        },
        {
            "label": "CTMM: Clean Build Directory",
            "type": "shell",
            "command": "rm",
            "args": ["-rf", "build/*"],
            "linux": {
                "command": "rm",
                "args": ["-rf", "build/*"]
            },
            "osx": {
                "command": "rm", 
                "args": ["-rf", "build/*"]
            },
            "windows": {
                "command": "powershell",
                "args": ["-NoProfile", "-Command", "Remove-Item -Recurse -Force build/*"]
            },
            "group": "build"
        },
        {
            "label": "CTMM: Create Missing Directories", 
            "type": "shell",
            "command": "mkdir",
            "args": ["-p", "build", "modules", "style", "assets"],
            "linux": {
                "command": "mkdir",
                "args": ["-p", "build", "modules", "style", "assets"]
            },
            "osx": {
                "command": "mkdir",
                "args": ["-p", "build", "modules", "style", "assets"] 
            },
            "windows": {
                "command": "cmd",
                "args": ["/C", "if not exist build mkdir build & if not exist modules mkdir modules & if not exist style mkdir style & if not exist assets mkdir assets"]
            },
            "group": "build"
        },
        {
            "label": "CTMM: Clean and Build",
            "dependsOrder": "sequence",
            "dependsOn": [
                "CTMM: Clean Build Directory",
                "CTMM: Build Complete System"
            ],
            "group": "build"
        },
        {
            "label": "CTMM: Generate Module",
            "type": "shell", 
            "command": "./create-module.sh",
            "linux": {
                "command": "./create-module.sh"
            },
            "osx": {
                "command": "./create-module.sh"
            },
            "windows": {
                "command": "cmd",
                "args": ["/C", "echo Please use: node module-generator.js ^<type^> ^<name^> && echo Available types: arbeitsblatt, tool, notfallkarte"]
            },
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "new"
            }
        },
        {
            "label": "CTMM: Analyze Project Statistics",
            "type": "shell",
            "command": "python3",
            "args": [
                "latex-helper.py",
                "stats",
                "-o",
                "build/ctmm-analysis.json"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "dependsOn": "CTMM: Create Missing Directories"
        },
        {
            "label": "CTMM: Check Build Errors",
            "type": "shell",
            "command": "python3",
            "args": [
                "latex-helper.py",
                "check-errors"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "new"
            },
            "problemMatcher": {
                "owner": "latex-helper",
                "fileLocation": ["relative", "${workspaceRoot}"],
                "pattern": {
                    "regexp": "^‚ùå\\s+(.*)$",
                    "message": 1
                }
            }
        },
        {
            "label": "CTMM: Quick Module Analysis",
            "type": "shell",
            "command": "python3",
            "args": [
                "latex-helper.py",
                "analyze"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "CTMM: Validate All Modules",
            "type": "shell",
            "command": "python3",
            "args": [
                "latex-helper.py",
                "validate"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "new"
            },
            "problemMatcher": {
                "owner": "latex-validation",
                "fileLocation": ["relative", "${workspaceRoot}"],
                "pattern": {
                    "regexp": "^üìÑ\\s+([^:]+):\\s*$",
                    "file": 1
                }
            }
        },
        {
            "label": "CTMM: Complete Build with Links",
            "type": "shell",
            "command": "pdflatex",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "-output-directory=build",
                "main.tex",
                "&&",
                "pdflatex",
                "-synctex=1", 
                "-interaction=nonstopmode",
                "-file-line-error",
                "-output-directory=build",
                "main.tex",
                "&&",
                "pdflatex",
                "-synctex=1",
                "-interaction=nonstopmode", 
                "-file-line-error",
                "-output-directory=build",
                "main.tex"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "dependsOn": "CTMM: Create Missing Directories"
        }
    ]
}
