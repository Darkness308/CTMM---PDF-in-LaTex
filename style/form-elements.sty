\RequirePackage{xcolor}
\RequirePackage{etoolbox}
\RequirePackage{hyperref}
\RequirePackage{tikz}

% Bedingte Definition: interaktiv vs. druckbar
\makeatletter
\@ifpackageloaded{hyperref}{%
  % Interaktive Felder
  \newcommand{\ctmmTextField}[3][]{\TextField[name=#3,width=#1,bordercolor=ctmmBlue]{#2}}
  \newcommand{\ctmmTextArea}[4][]{\TextField[name=#4,width=#1,height=#2,multiline=true,bordercolor=ctmmBlue]{#3}}
  \newcommand{\ctmmCheckBox}[2]{\CheckBox[name=#2,bordercolor=ctmmGreen]{#1}}
  \newcommand{\ctmmRadioButton}[3]{\RadioButton[name=#1,value=#2,bordercolor=ctmmOrange]{#3}}
}{%
  % Druckbare Fallbacks
  \newcommand{\ctmmTextField}[3][]{#2 \underline{\hspace{#1}}}
  \newcommand{\ctmmTextArea}[4][]{#3 \underline{\hspace{#1}}}
  \newcommand{\ctmmCheckBox}[2]{#1 [\ ]}
  \newcommand{\ctmmRadioButton}[3]{#3 ( )}
}
\makeatother

% CTMM-spezifische Elemente
\newcommand{\ctmmMoodScale}[1]{%
  \textbf{Stimmung #1: }\foreach \x in {1,...,10}{\ctmmRadioButton{mood-#1}{\x}{\x}\,}
}
\newcommand{\ctmmStressLevel}[1]{% text field
  \textbf{Stress #1: }\ctmmTextField[3cm]{ }{stress-#1}
}
\newcommand{\ctmmYesNo}[1]{% Ja/Nein
  \textbf{#1: }Ja \ctmmCheckBox{Ja}{#1-yes}\quad Nein \ctmmCheckBox{Nein}{#1-no}
}
\newcommand{\ctmmSafeWordOptions}[1]{% Safe Words
  \textbf{Safe Word: }Stop \ctmmCheckBox{Stop}{#1-stop}\quad Pause \ctmmCheckBox{Pause}{#1-pause}\quad Help \ctmmCheckBox{Help}{#1-help}
}

