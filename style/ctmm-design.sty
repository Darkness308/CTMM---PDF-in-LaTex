% Farbschema
\definecolor{ctmmBlue}{HTML}{003087}
\definecolor{ctmmGreen}{HTML}{4CAF50}
\definecolor{ctmmOrange}{HTML}{FF6200}
\definecolor{ctmmRed}{HTML}{D32F2F}
