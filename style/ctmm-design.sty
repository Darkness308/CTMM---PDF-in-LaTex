% tcolorbox f√ºr CTMM-Boxen
\RequirePackage{tcolorbox}

% Box-Stile definieren
\newtcolorbox{ctmmBlueBox}[2][]{
  colback=ctmmBlue!5!white,
  colframe=ctmmBlue,
  title=#2,
  #1
}

\newtcolorbox{ctmmGreenBox}[2][]{
  colback=ctmmGreen!5!white,
  colframe=ctmmGreen,
  title=#2,
  #1
}

\newtcolorbox{ctmmOrangeBox}[2][]{
  colback=ctmmOrange!5!white,
