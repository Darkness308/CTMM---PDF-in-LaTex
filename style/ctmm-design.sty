% Quick Navigation Makro
\newcommand{\quickNav}[2]{%
  \textcolor{#1}{\faArrowRight~#2}%
}

% Kapitel-Referenz Makro
\newcommand{\ctmmRef}[2]{%
  \hyperref[#1]{\textcolor{ctmmBlue}{\faLink~#2}}%
}

% Header-Stilisierung
\newcommand{\ctmmHeader}[1]{
  {\Large\bfseries\textcolor{ctmmBlue}{#1}}
}